@using Microsoft.AspNetCore.Identity
@using ProductCatalog.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @User.Identity?.Name!</a>
        </li>
     
    
        
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }

    else
    {
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Register" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Register</button>
            </form>
        </li>
       
        

        
        
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Login" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Login</button>
            </form>
        </li>
        
       
    }
</ul>