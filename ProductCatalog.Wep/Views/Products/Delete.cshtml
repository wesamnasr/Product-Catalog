@model ProductCatalog.Application.DTOs.ProductDto

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
    <p>Price: @Model.Price.ToString("C")</p> 
    <p>Category: @ViewBag.CategoryName</p> 
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div>
            <img src="@Model.ImagePath" alt="Product Image" style="max-width: 200px; margin-bottom: 10px;" />
        </div>
    }
</div>

<form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</form>